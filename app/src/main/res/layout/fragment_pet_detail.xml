<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="6dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ImageView for the pet's image -->
            <ImageView
                android:id="@+id/pet_image_view"
                android:layout_width="match_parent"
                android:layout_height="197dp"
                android:contentDescription="@string/pet_image_description"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <!-- TextView for the pet's name -->
            <TextView
                android:id="@+id/pet_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Pet Name"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- TextView for the pet's price -->
            <TextView
                android:id="@+id/pet_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Pet Price"
                android:textColor="@color/maroon"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <Button
                    android:id="@+id/add_to_cart_btn"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_background"
                    android:backgroundTint="@color/light_maroon"
                    android:text="Add to Cart"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/add_to_fav_btn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/edittext_background"
                    android:backgroundTint="@color/light_maroon"
                    android:text="Add to Fav"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/qty_edit_text"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_margin="5.2dp"
                    android:background="@drawable/edittext_background"
                    android:backgroundTint="#FECBD6"
                    android:gravity="center"
                    android:hint="Qty"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkgray"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/star_5"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/star_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/pet_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="About the pet:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pet_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/lorem_text"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pet_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Category:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pet_category_text_view"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Variety"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
